@model OkulİdareSistemi.Models.OkulYonetim
@{
    Layout = "~/Views/Shared/Sidebar.cshtml";
}


@using (Html.BeginForm("OkulYonetimEdit", "Home", FormMethod.Post))
{
    <div>
        <div>
            <div>
                <h3><b>PERSONEL GÜNCELLEME</b></h3>
            </div>
            <div>
                <div>
                    <form action="#">
                        <div>
                            <h3>@ViewBag.Message</h3>
                        </div>
                        <div>
                            <div>
                                <label for="inputEmailIcon">
                                    Adı Soyadı
                                </label>
                            </div>
                            <div>
                                <div>
                                    @Html.EditorFor(model => model.AdSoyad, new { htmlAttributes = new { @class = "form-control  ih-medium ip-gray radius-xs b-light", id = "inputEmailIcon", placeholder = "adı soyadı" } })
                                </div>
                            </div>
                        </div>
                        <div>
                            <div>
                                <label for="inputEmailIcon" class=" col-form-label color-dark fs-14 fw-500 align-center">
                                    Görevi
                                </label>
                            </div>
                            <div>
                                <div>
                                    @Html.EditorFor(model => model.Gorevi, new { htmlAttributes = new { @class = "form-control  ih-medium ip-gray radius-xs b-light", id = "inputEmailIcon", placeholder = "görevi" } })
                                </div>
                            </div>
                        </div>
                        <div>
                            <div>
                                <label for="inputEmailIcon" class=" col-form-label color-dark fs-14 fw-500 align-center">
                                    Yönetim Tipi
                                </label>
                            </div>
                            <div>
                                <div>
                                    <select name="YonetimTip" id="YonetimTip">
                                        <option>Öğretmen</option>
                                        <option>İdare</option>
                                        <option>Öğrenci İşleri</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div>
                            <input type="submit" value="Güncelle" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <button>@Html.ActionLink("Anasayfa", "Index", "Home", new { area = "A" }, null)</button>
    <br />

}

